rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User information collection - users can only access their own data
    match /user-information/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /faqs/{faqId} {
  allow read: if true;  // Public read access
  allow write: if false;  // No writes in production (manage via admin panel)
}

match /programs/{programId} {
  allow read: if true;  // Public read access
  allow write: if request.auth != null;  // Only authenticated users can write
  // TODO: Add role-based restrictions for organizers only
}
    
    // Program comments collection - for the review system
    match /program-comments/{commentId} {
      // Allow authenticated users to read all comments (to display reviews)
      allow read: if request.auth != null;
      
      // Allow authenticated users to create comments with their own userID
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userID;
      
      // Allow users to update/delete only their own comments
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.userID;
    }
    
  }
}